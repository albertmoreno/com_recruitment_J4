        </field>

       <field name="limit"
               type="limitbox"
               label="COM_RECRUITMENT_LIST_LIMIT"
               description="COM_RECRUITMENT_LIST_LIMIT_DESC"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
